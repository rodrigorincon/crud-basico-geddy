.hero-unit
  form#pessoa-form.form-horizontal(action="/pessoas", method="POST")
    fieldset
      legend Create a new Pessoa
      if params.errors
        .control-group
          ul
          for err in params.errors
            li= err

      != partial('form', {pessoa: params})

      .form-actions
        != contentTag('input', 'Add', {type: 'submit', class: 'btn btn-primary'})
