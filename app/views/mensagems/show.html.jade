.hero-unit
  h2.id= mensagem.id
  != linkTo('Edit this mensagem', editMensagemPath(params.id), {class: 'btn pull-right'})
  != linkTo('Back to list', mensagemPath(''), {class: 'btn pull-right'})

h2 Mensagem Properties
each property, key in mensagem
  if key !== 'saved' && key != 'pessoa'
    .row.list-item
      .span4
        h3= key
      .span8
        h3
          i.icon-list-alt
          if key != 'pessoaId'
            span(class=key)= property
          else
            span(class=key)= mensagem.pessoa.nome
