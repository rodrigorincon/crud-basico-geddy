.hero-unit
  form#estado-form.form-horizontal(action="/estados", method="POST")
    fieldset
      legend Create a new Estado
      if params.errors
        .control-group
          ul
          for err in params.errors
            li= err

      != partial('form', {estado: params})

      .form-actions
        != contentTag('input', 'Add', {type: 'submit', class: 'btn btn-primary'})
